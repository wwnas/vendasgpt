.navbar {
  background-color: var(--color-primary);
}

.navbar-brand {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--color-light);
}

.navbar-nav {
  margin-left: auto;
}

.nav-link {
  font-weight: 700;
  color: var(--color-light) !important;
}

.nav-link:hover {
  color: var(--color-light) !important;
  text-decoration: underline;
}

